<button class='btn btn-primary'{{action 'nova'}}>Adicionar Pessoa</button>
<br/>


<label for="filtro-nome">Filtrar por nome</label>
	<div class='input-group'>
		<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
{{input id='filtro-nome' value=nome class='form-control'
placeholder="Digite o nome"}}
	</div>
<br/>

<table class='table'>
	<thead>
	 	<tr>
	 		<th>ID</th>
	 		<th>Nome</th>
	 	</tr>
	</thead>
	<tbody>
	  {{#each model as |pessoa|}}
	  	<tr>
	  		<td>{{ pessoa.id }}</td>
	  		<td>{{#link-to 'pessoa' pessoa.id }}{{pessoa.nome}}{{/link-to}}</td>
	  	</tr>
	  {{/each}}
	</tbody>
</table>

{{outlet}}
