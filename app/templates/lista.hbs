<button {{action 'nova'}}>Nova</button>
<br/>


<label for="filtro-nome">Filtrar por nome</label>
{{input id='filtro-nome' value=nome}}
<br/>

<table>
	<thead>
	 	<tr>
	 		<th>ID</th>
	 		<th>Nome</th>
	 	</tr>
	</thead>
	<tbody>
	  {{#each model as |pessoa|}}
	  	<tr>
	  		<td>{{ pessoa.id }}</td>
	  		<td>{{#link-to 'pessoa' pessoa.id }}{{pessoa.nome}}{{/link-to}}</td>
	  	</tr>
	  {{/each}}
	</tbody>
</table>

{{outlet}}